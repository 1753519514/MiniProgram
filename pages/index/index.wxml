<view>
  <swiper class="swiper-box">
    <swiper-item>
      <image src="../../asset/s1.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../asset/s2.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../asset/s3.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="../../asset/s4.jpg"></image>
    </swiper-item>
  </swiper>
  <view class="tab">
    <view class="{{num==1?'active':''}}" data-num="1" bindtap="changeNum">热映</view>
    <view class="{{num==2?'active':''}}" data-num="2" bindtap="changeNum">影院</view>
    <view class="{{num==3?'active':''}}" data-num="3" bindtap="changeNum">待映</view>
    <view class="{{num==4?'active':''}}" data-num="4" bindtap="changeNum">经典电影</view>
    <view class="{{num==5?'active':''}}" data-num="5" bindtap="changeNum">小剧场</view>
  </view>
  <view wx:if="{{num == 1}}">
    <view class="c-a-film">
      <text class="title">最受好评电影</text>
      <scroll-view class="scroll-box" scroll-x="true">
        <view class="scroll-item">
          <image src="../../asset/m1.jpg"></image>
          <view class="film-name">明日战记</view>
        </view>
        <view class="scroll-item">
          <image src="../../asset/m2.jpg"></image>
          <view class="film-name">独行月球</view>
        </view>
        <view class="scroll-item">
          <image src="../../asset/m3.jpg"></image>
          <view class="film-name">搜救</view>
        </view>
        <view class="scroll-item">
          <image src="../../asset/m4.jpg"></image>
          <view class="film-name">新灰姑娘2</view>
        </view>
        <view class="scroll-item">
          <image src="../../asset/m5.jpg"></image>
          <view class="film-name">平凡英雄</view>
        </view>
        <view class="scroll-item">
          <image src="../../asset/m6.jpg"></image>
          <view class="film-name">万里归途</view>
        </view>
        <view class="scroll-item">
          <image src="../../asset/m7.jpg"></image>
          <view class="film-name">哥你好</view>
        </view>
      </scroll-view>
    </view>
  </view>
  <view wx:elif="{{num==2}}">
    <view class="c-a-film">
      <text class="title">第二页</text>
    </view>
  </view>
  <view wx:elif="{{num==3}}">
    <view class="c-a-film">
      <text class="title">第三页</text>
    </view>
  </view>
  <view wx:elif="{{num==4}}">
    <view class="c-a-film">
      <text class="title">第四页</text>
    </view>
  </view>
  <view wx:elif="{{num==5}}">
    <view class="c-a-film">
      <text class="title">第五页</text>
    </view>
  </view>
</view>