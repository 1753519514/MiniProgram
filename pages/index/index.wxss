/**index.wxss**/
.swiper-box {
  height: 240px;
}

.swiper-box image {
  width: 100%;
}

.tab {
  display: flex;
  width: 100%;
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid #e6e6e6;
}

.tab view {
  flex: 1;
  text-align: center;
}

.active {
  color: #E54847;
  border-bottom: 2px solid #E54847;
}

.c-a-film {
  height: 90%;
  width: 90%;
  padding: 5%;
}

.title {
  color: #333;
  font-size: 16px;
}

.scroll-box {
  white-space: nowrap;
  width: 100%;
  height: 150px;
}

.scroll-item {
  display: inline-block;
  margin-right: 10px;
}

.scroll-item image {
  height: 100px;
  width: 75px;
}

.scroll-item view {
  color: #000000;
  text-align: center;
}