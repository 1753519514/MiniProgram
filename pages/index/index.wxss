/**index.wxss**/
.swiper-box {
  height: 240px;
}

.swiper-box image {
  width: 100%;
}

.tab {
  display: flex;
  width: 100%;
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid #e6e6e6;
}

.tab view {
  flex: 1;
  text-align: center;
}

.active {
  color: #E54847;
  border-bottom: 2px solid #E54847;
}

.c-a-film {
  height: 90%;
  width: 90%;
  padding: 5%;
}

.title {
  color: #333;
  font-size: 20px;
}

.scroll-box {
  white-space: nowrap;
  width: 100%;
  height: 160px;
}

.scroll-item {
  display: inline-block;
  margin-right: 10px;
}

.scroll-item image {
  max-height: 100px;
  width: 75px;
}

.film-name {
  font-size: 13px;
  width: 75px;
  color: #222;
  margin: 3px 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}