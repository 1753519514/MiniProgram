/**index.wxss**/
.swiper-box {
  height: 240px;
}

.swiper-box image {
  width: 100%;
}

.tab {
  display: flex;
  width: 100%;
  height: 50px;
  line-height: 50px;
  border-bottom: 1px solid #e6e6e6;
}

.tab view {
  flex: 1;
  text-align: center;
}

.active {
  color: #E54847;
  border-bottom: 2px solid #E54847;
}

.films {
  height: 90%;
  width: 90%;
  padding: 5%;
}

.title {
  color: #333;
  font-size: 20px;
}

.scroll-box {
  white-space: nowrap;
  width: 100%;
  height: 125px;
}

.scroll-item {
  display: inline-block;
  margin-right: 10px;
}

.image-box {
  height: 100px;
  width: 75px;
  overflow: hidden;
}

.image-box image {
  width: 75px;
}

.film-name {
  font-size: 12px;
  width: 75px;
  color: #222;
  margin: 3px 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}

.main {
  border-top: 10px solid #f6f6f6;
}

.film-box {
  height: 110px;
  display: flex;
}

.film-left {
  flex: 1;
}

.film-right {
  flex: 4;
  border-bottom: 1px solid #F0F0F0;
  display: flex;
}

.name {
  font-size: 16px;
  font-weight: 700;
}

.mark {
  margin-top: 5px;
  font-size: 13px;
  color: #666;
}

.mark text {
  font-size: 16px;
  color: #faaf00;
}

.desc {
  font-size: 13px;
  margin-top: 5px;
  color: #666;
}

.showInfo {
  margin-top: 5px;
  font-size: 13px;
  color: #666;
}

.r-l {
  flex: 2;
}

.r-r {
  flex: 1;
}

.buy {
  background: rgb(240, 61, 55);
  color: white;
  width: 58px !important;
  height: 28px;
  font-size: 13px !important;
  font-weight: 400 !important;
  padding: 0 !important;
  line-height: 28px;
  border-radius: 80px;
}